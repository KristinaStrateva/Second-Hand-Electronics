<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="POST">
        <input type="text" class="search-name" name="name" value="{{name}}" placeholder="Search Name...">
        <input type="text" class="search-type" name="type" value="{{type}}" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    {{#if isNotEmpty}}
    <div class="search-result">
        <div class="search-list">
        {{#each searchResult}}
            {{>electronic}}
        {{/each}}
        </div>
    </div>
    {{else}}
    <div class="no-match">
        <p>No match was found!</p>
    </div>
    {{/if}}
</section>